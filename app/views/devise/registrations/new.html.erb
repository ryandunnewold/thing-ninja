<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.input_field :email, autofocus: true, placeholder: 'Email' %>
  <%= f.input_field :username, placeholder: 'Username' %>
  <%= f.input_field :password, placeholder: 'Password' %>

  <%= f.submit "Register", class: 'register-btn' %>
  <%= link_to "Back to Sign In", new_user_session_path, class: 'other-btn' %>
<% end %>