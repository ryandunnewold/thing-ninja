<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.input_field :email, autofocus: true, label: false, placeholder: 'Email' %>
  <%= f.input_field :password, placeholder: 'Password' %>

  <% if devise_mapping.rememberable? -%>
    <%= f.hidden_field :remember_me, as: :boolean, value: true %>
  <% end -%>

  <%= f.submit "Sign In", class: 'login-btn' %>
  <%= link_to 'Register', new_user_registration_path, class: 'register-btn' %>
<% end %>